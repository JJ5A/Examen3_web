  import '../../css/dashboard-common.css';
  import '../../css/dashboard.css';

  // Crear instancias de los servicios
  const authService = new AuthService();
  const studentService = new StudentService(authService);

  // Estado para los datos del estudiante
  let studentData = null;
  let isLoading = true;
  let error = null;

  onMount(async () => {
    console.log('ðŸŽ¯ DASHBOARD MOUNT - Iniciando...');
    
    // Verificar si estÃ¡ autenticado
    if (!authService.isAuthenticated()) {
      console.log('âŒ No estÃ¡ autenticado, redirigiendo...');
      // Si no estÃ¡ autenticado, redirigir al login
      goto('/');
      return;
    }

    console.log('âœ… Usuario autenticado');
    console.log('ðŸ”‘ Token presente:', !!authService.getToken());
    
    // Mostrar info del usuario desde el token
    const userInfo = authService.getUserInfo();
    console.log('ðŸ‘¤ User Info:', userInfo);

    try {
      console.log('ðŸ“¡ Iniciando peticiÃ³n de datos del estudiante...');
      
      // Obtener datos del estudiante usando el servicio separado
      const response = await studentService.getStudentData();
      console.log('ðŸ“¨ Respuesta completa recibida:', response);
      
      if (response && response.data) {
        studentData = response.data;
        console.log('âœ… Datos del estudiante cargados exitosamente:', studentData);
      } else {
        console.log('âš ï¸ Respuesta recibida pero sin datos:', response);
        error = 'La respuesta del servidor no contiene datos del estudiante';
      }
    } catch (err) {
      console.error('ðŸ’¥ Error al cargar datos del estudiante:', err);
      error = err.message;
      
      // Si hay error de autenticaciÃ³n, redirigir al login
      if (err.message.includes('401') || err.message.includes('token')) {
        authService.logout();
        goto('/');
      }
    } finally {
      isLoading = false;
    }
  });

  function handleLogout() {
    authService.logout();
    goto('/');
  }

  async function refreshData() {
    console.log('ðŸ”„ Refrescando datos...');
    isLoading = true;
    error = null;
    
    try {
      const response = await studentService.getStudentData();
      console.log('ðŸ”„ Datos refrescados:', response);
      
      if (response && response.data) {
        studentData = response.data;
      } else {
        error = 'La respuesta del servidor no contiene datos del estudiante';
      }
    } catch (err) {
      console.error('ðŸ’¥ Error al refrescar datos:', err);
      error = err.message;
    } finally {
      isLoading = false;
    }
  }
</script>

